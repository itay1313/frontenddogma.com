<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in collections.all | sort -%}
	{%- if page.url or url -%}
	{% set absoluteUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset %}
	<url>
		<loc>{{ absoluteUrl }}</loc>
	</url>
	{%- endif %}
{%- endfor %}
</urlset>