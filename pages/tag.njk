layout: home.njk
permalink: /tags/{{ tag | slug }}/
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: “{{ tag }}” Archive
