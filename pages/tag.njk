---
layout: home.njk
permalink: /tags/{{ tag | slug }}/
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: “{{ tag }}” Archive
---
<h1>{{ title }}</h1>
{% set posts = collections[ tag ] %}
{% include 'posts.njk' %}
<ol id=fd-nav>
  <li><a href={{ '/tags/' | url }}>All tags</a>
</ol>