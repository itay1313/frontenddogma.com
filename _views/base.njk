<!doctype html>
<html lang=en>
	<meta charset=utf-8>
	<meta name=viewport content="initial-scale=1, minimum-scale=1, width=device-width">
	<meta name=description content="{{ description or metadata.description }}">
	<meta name=twitter:card content=summary>
	<meta name=twitter:title content="{% if title %}{{ title }} · {% endif %}{{ metadata.title }}">
	<!-- @@ Truncate description --><meta name=twitter:description content="{{ description or metadata.description }}">
	<meta name=twitter:image content=https://d1cxmu1ofnef1v.cloudfront.net/media/logo-social.png>
	<meta property="og:image" content="https://d1cxmu1ofnef1v.cloudfront.net/media/logo-social.png">
	<title>{% if title %}{{ title }} · {% endif %}{{ metadata.title }}</title>
	<!-- @@ Add CDN reference --><link rel=stylesheet href={{ '/setup/default.css' | url }}>
	<link rel=alternate href={{ metadata.feed.path | url }} type=application/atom+xml title="{{ metadata.title }}">
	<link rel=alternate href={{ metadata.jsonfeed.path | url }} type=application/json title="{{ metadata.title }}">
	<header>
		<h1>{% if page.url != '/' %}<a href={{ '/' | url }}>{% endif %}{{ metadata.title }}{% if page.url != '/' %}</a>{% endif %}</h1>
		<!-- @@ -->
		<nav>
			<ul>
				{%- for entry in collections.all | eleventyNavigation %}
				<li>{% if entry.url != page.url %}<a href={{ entry.url | url }}>{% endif %}{{ entry.title }}{% if entry.url != page.url %}</a>{% endif %}
				{%- endfor %}
			</ul>
		</nav>
	</header>
	<main>
		<!-- Beware of code entropy -->
		{{ content | safe }}
	</main>
	<footer>
		<p>{{ metadata.title }}: {{ metadata.description }}
		<p><a href=https://github.com/j9t/frontenddogma.com/blob/main/{{ page.inputPath }}>Edit on GitHub</a>
		<p><a href=https://twitter.com/FrontendDogma>Twitter</a>
	</footer>
	{% if vg_wort %}<img src=https://vg07.met.vgwort.de/na/{{vg_wort}} alt="" id=vg-wort>{% endif %}
	<!-- Current page: {{ page.url | url }} -->