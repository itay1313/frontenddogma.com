<ol start={{ (postsCounter or posts.length) }} reversed>
	{% for post in posts | reverse %}
	<!-- <li class="post-item{% if post.url == url %} post-item-active{% endif %}"> -->
	<li>
		<a href="{% if post.data.target_url %}{{ post.data.target_url }}{% else %}{{ post.url | url }}{% endif %}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a> (<a href="https://twitter.com/intent/tweet?text={{ post.data.title | urlencode }}{% if post.data.author %},%20by%20@{{ post.data.author }}{% if post.data.coauthor %}%20and%20@{{ post.data.coauthor }}{% endif %}{% if post.data.publisher %}%20%28@{{ post.data.publisher }}%29{% endif %}{% else %}{% if post.data.publisher %},%20by%20@{{ post.data.publisher }}{% endif %}{% endif %},%20featured%20on%20@frontenddogma%3A%0A%0A{% if post.data.target_url %}{{ post.data.target_url }}{% else %}{{ metadata.url_truncated }}{{ post.url | url }}{% endif %}">tweet</a>) Â·
		<time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
		{% if not collections[ tag ] %}
			{% set comma = joiner() %}
			{% for tag in post.data.tags | filterTagList %}
				{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
				{{ comma() }} <a href={{ tagUrl | url }} rel=tag>{{ tag }}</a>
			{% endfor %}
		{% endif %}
	{% endfor %}
</ol>