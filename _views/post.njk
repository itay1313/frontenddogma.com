---
layout: base.njk
---
<article>
  <h1>{% if target_url %}<a href="{{ target_url }}">{% endif %}{{ title }}{% if target_url %}</a>{% endif %}</h1>
  {% if author or tags %}<p id=fd-meta>{% endif %}{% if author %}by <a href=https://twitter.com/{{ author }}>@{{ author }}</a> on {% endif %}{% if tags %}<time datetime={{ page.date | htmlDateString }}>{{ page.date | readableDate }}</time>, tagged {% set comma = joiner() %}{% for tag in tags | filterTagList %}{% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}{{ comma() }} <a href={{ tagUrl | url }} rel=tag>{{ tag }}</a> {%- endfor %} Â· <a href="https://twitter.com/intent/tweet?text=%E2%80%9C{{ title | urlencode }}%E2%80%9D{% if author %}%20by%20@{{ author }}{% endif %},%20featured%20on%20@FrontendDogma%3A%0A%0A{% if target_url %}{{ target_url }}{% else %}{{ metadata.url_truncated }}{{ page.url | url }}{% endif %}">Tweet this?</a>{% endif %}
  {% if image %}<div id=fd-teaser>{% if target_url %}<a href="{{ target_url }}">{% endif %}<!-- @@ Add CDN reference --><img src=/media{{ image }} alt="{{ title }}">{% if target_url %}</a>{% endif %}</div>{% endif %}

{{ content | safe }}

{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
  <footer>
    <ul>
      {% if target_url %}<li>Full version: <a href="{{ target_url }}">{{ title }}</a>{% endif %}
      {% if original_url %}<li>Original: <a href="{{ original_url }}" rel=canonical>{{ title }}</a>{% endif %}
      {% if previousPost %}<li>Previous: <a href={{ previousPost.url | url }}>{{ previousPost.data.title }}</a></li>{% endif %}
      {% if nextPost %}<li>Next: <a href={{ nextPost.url | url }}>{{ nextPost.data.title }}</a></li>{% endif %}
    </ul>
  </footer>
{%- endif %}
</article>